<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <% if task.completed?  %>
  <i class="fa-regular fa-square-check"></i>
  <% else %>
  <i class="fa-regular fa-square"></i>
  <% end %>
  <li><%= link_to task.title, task_path(task.id)  %></li>
  <li><%= link_to task_path(task.id), data: {turbo_method: :delete, turbo_confirm:"Are you sure to delete?"} do  %>
  <i class="fa-solid fa-trash-can"></i>
  <% end %>
  </li>
  <% end %>
</ul>
<p></p>
<%= link_to "+ Add a new task", new_task_path %>
